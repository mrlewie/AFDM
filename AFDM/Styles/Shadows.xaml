<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:media="using:CommunityToolkit.WinUI.UI.Media">

    <media:AttachedCardShadow 
        x:Key="MoviesCardShadow"
        CornerRadius="5"
        Color="Black"
        Offset="1,1"
        BlurRadius="3"
        Opacity="0.5">
    </media:AttachedCardShadow>

    <media:AttachedCardShadow 
        x:Key="MovieActorCardShadow"
        CornerRadius="90"
        Color="Black"
        Offset="1,1"
        BlurRadius="3"
        Opacity="0.5">
    </media:AttachedCardShadow>


</ResourceDictionary>
